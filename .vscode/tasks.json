{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "/opt/homebrew/bin/g++-15",
      "args": [
        "-std=c++20",
        "-O2",
        "-Wall",
        "-Wextra",
        "-Wshadow",
        "-Wconversion",
        "-Wno-sign-conversion",
        "-D_GLIBCXX_DEBUG",
        "-o",
        "${workspaceFolder}/__exec__/compiled.out", // Fixed binary name in root
        "${file}" // Current source file
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "focus": true
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "./compiled.out", // Fixed binary name
      "options": {
        "cwd": "${workspaceFolder}/__exec__" // Root execution directory
      },
      "group": "none",
      "dependsOn": ["compile"],
      "presentation": {
        "reveal": "always",
        "focus": true
      }
    },
    {
      "label": "compile and run",
      "type": "shell",
      "command": "./compiled.out < input.txt > output.txt", // Fixed binary name
      "options": {
        "cwd": "${workspaceFolder}/__exec__" // Root execution directory
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["compile"],
      "presentation": {
        "reveal": "always",
        "focus": true
      }
    }
  ]
}
